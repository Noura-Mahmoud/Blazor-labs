@page "/trainees/details/{Id:int}"
@page "/traineedetails/{Id:int}"

<h3>Trainee Details</h3>

<div class="form-group row">
    <label class="col-form-label  ">ID</label>
     
        <label class="form-control">@trainee.ID</label>
</div>

<div class="form-group row">
    <label class="col-form-label  ">Name</label>
     
        <label class="form-control">@trainee.Name</label>
</div>

<div class="form-group row">
    <label class="col-form-label  ">Gender</label>
     
        <label class="form-control">@trainee.Gender</label>
</div>

<div class="form-group row">
    <label class="col-form-label  ">Email</label>
     
        <label class="form-control">@trainee.Email</label>
</div>

<div class="form-group row">
    <label class="col-form-label  ">MobileNo</label>
     
        <label class="form-control">@trainee.MobileNo</label>
</div>

<div class="form-group row">
    <label class="col-form-label  ">Birthdate</label>
     
        <label class="form-control">@trainee.Birthdate.ToString("dd/MM/yyyy")</label>
</div>

<div class="form-group row">
    <label class="col-form-label  ">Is Graduated</label>
     
        <label class="form-control">@trainee.IsGraduated</label>
</div>


@code {
    [Parameter]
    public int Id { get; set; }

    private Trainee? trainee;

    protected override Task OnInitializedAsync()
    {
        trainee = MockData.Trainees.FirstOrDefault(t => t.ID == Id);
        return base.OnInitializedAsync();
    }

}
